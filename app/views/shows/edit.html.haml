.container
  %h1
    Details for 
    %span.font-italic= @show.name

  = render :partial => 'form'

  %h2 Performances

  %p
    = link_to 'Add Performances', new_show_showdate_path(@show), :class => 'btn btn-primary'
    = link_to 'Add/Change Ticket Type(s) For Performance(s)', new_valid_voucher_path(:show_id => @show.id), :class => 'btn btn-primary'

  .row.bg-dark.text-light
    .col-3 Date/time (click to edit show date details)
    .col-3 Adv sales stop
    .col-2 Max Sell<br/>(% of House)
    .col-2 Seating
  .row
    .col-3
      %a{:name => 'dummy'}
      = link_to 'Expand All', '#dummy', :onclick => %Q{$('.flippy-div').show(); $('.flippy').html('&#x25BC'); false;}
      &nbsp;&bull;&nbsp;
      = link_to 'Collapse All', '#dummy', :onclick => %Q{$('.flippy-div').hide(); $('.flippy').html('&#x25BA'); false;}

  = render :partial => 'showdate', :collection => @showdates, :locals => {:is_boxoffice_manager => @is_boxoffice_manager}

